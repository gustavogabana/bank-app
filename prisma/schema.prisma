generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db" // O banco de dados ser√° criado na raiz do projeto como dev
}

model User {
  id       Int     @id @default(autoincrement())
  username String  @unique
  password String
  accounts Account[]
  tokens   Token[]
}

model Account {
  id      Int    @id @default(autoincrement())
  balance Int    @default(0)
  user_id Int
  user    User   @relation(fields: [user_id], references: [id])
}

model Token {
  id      Int    @id @default(autoincrement())
  user_id Int
  token   String
  user    User   @relation(fields: [user_id], references: [id])
}
